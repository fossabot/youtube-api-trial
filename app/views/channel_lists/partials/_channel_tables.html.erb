<div class="container kinda-table">
  <% channels.each do |channel| %>
    <div class="row">
      <div class="col-xs-3 col-sm-2">
        <% if channel.persisted? %>
          <%= button_tag t('helpers.link.channel_created'), type: 'button', disabled: true, class: 'btn btn-secondary' %>
        <% else %>
          <%= form_with(model: channel, format: :json, class: 'create-channel') do |form| %>
            <%= form.hidden_field :channel_id %>
            <%= form.submit t('helpers.submit.create_channel'), class: 'btn btn-primary',
                            data: {disable_with: false} %>
          <% end %>
        <% end %>
      </div>
      <div class="col-xs-3 col-sm-2">
        <%= image_tag channel.thumbnail_url %>
      </div>
      <div class="col-xs-6 col-sm-4">
        <%= link_to channel.title, channel.url, target: '_blank' %>
      </div>
      <div class="hidden-xs col-sm-4 break-word-wrap">
        <%= channel.description.truncate(100) %>
      </div>
    </div>
  <% end %>
</div>
